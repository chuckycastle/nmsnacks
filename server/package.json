{
  "name": "nmsnacks-server",
  "version": "2.0.0",
  "description": "NMSnacks POS System - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "prisma studio",
    "migrate:live": "tsx src/scripts/migrate-from-live.ts",
    "backup:live": "tsx src/scripts/backup-live.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "redis": "^4.6.12",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prisma": "^5.7.1",
    "nodemon": "^3.0.2"
  },
  "prisma": {
    "seed": "tsx src/scripts/seed.ts"
  }
}